isNull(value)

  return typeof(value) == "null"


isNotNull(value)

  return typeof(value) != "null"


isString(value)

  return typeof(value) == "string"


isEmptyString(value)

  return typeof(value) == "string" && length(value) == 0


isNonEmptyString(value)

  return typeof(value) == "string" && length(value) > 0


isDimensionalOrDimensionlessAmount(value)

  return typeof(value) == "unit"


isDimensionalAmount(value, directives)

  if typeof(directives) != "object" || typeof(directives.considerDimensionlessZeroAsDimensionalAmount) != "boolean"

    error(
      "The function 'isDimensionalAmount' requires the second argument of object type with boolean property " +\
      "'considerDimensionlessZeroAsDimensionalAmount'."
    )


  if value == 0

    return directives.considerDimensionlessZeroAsDimensionalAmount


  return typeof(value) == "unit" && isNonEmptyString(unit(value))


isDimensionlessAmount(value)

  return typeof(value) == "unit" && isEmptyString(unit(value))


isNaturalNumber(value)

  return isDimensionlessAmount(value, { considerDimensionlessZeroAsDimensionlessAmount: false }) && match('^\d+$', "" + value) == value && value != 0


isBoolean(value)

  return typeof(value) == "boolean"


isTrue(value)

  return value == true


isFalse(value)

  return value == false


isObject(value)

  return typeof(value) == "object"


isIdentifier(value)

  return typeof(value) == "ident"
