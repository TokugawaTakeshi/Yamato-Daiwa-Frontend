mixin Snackbar--YDF(properties)

  -

    const {
      theme = Snackbar__YDF.Themes.regular,
      externalThemes = Snackbar__YDF.externalThemes,
      geometry = Snackbar__YDF.GeometricVariations.regular,
      decoration
    } = PugMixinsObjectTypeParametersProcessor.processParameter({
      rawParameter: properties,
      parameterNumber: 1,
      parameterName: "properties",
      parameterPropertiesSpecification: Snackbar__YDF.propertiesSpecification,
      mixinName: "Snackbar--YDF"
    });

    const rootElementModifierCSS_Classes = [
      ...Object.entries(Snackbar__YDF.Themes).length > 1 && !externalThemes ?
