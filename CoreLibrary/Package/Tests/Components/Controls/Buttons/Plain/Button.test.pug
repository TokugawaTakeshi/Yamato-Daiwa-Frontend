extends ../../../../../PagesTemplates/RegularWebPage.pug


block append Metadata

  - styleSheetsURIs = [ "./Button.test.css" ]


block append Requirements

  include ../../../../../Components.pug


block append PageContent

  .ButtonsShowcasesFlow

    mixin ButtonsShowcase(propertiesObject)
      table.ButtonsShowcase
        caption= propertiesObject.caption
        thead
          tr
            th "button" tag
            th "a" tag
            th "input" tag
        tbody
          tr
            block

    +ButtonsShowcase({ caption: "Default options" })
      td: +Button--YDF({ label: "本文 Teksto" })
      td: +Button--YDF({ label: "本文 Teksto", URI: "#" })
      td
        +Button--YDF({
          label: "本文 Teksto",
          HTML_Type: Button.HTML_Types.inputButton
        })

    +ButtonsShowcase({ caption: "Small size" })
      td: +Button--YDF({ geometry: Button.GeometricVariations.small }) 本文 Teksto
      td
        +Button--YDF({
          label: "本文 Teksto",
          URI: "#",
          geometry: Button.GeometricVariations.small
        })
      td
        +Button--YDF({
          label: "本文 Teksto",
          HTML_Type: Button.HTML_Types.inputButton,
          geometry: Button.GeometricVariations.small
        })

    //-

      +ButtonsShowcase({ caption: "錠型" })
        td
          +Button({ capsuleShape: true }) 本文 Teksto
        td
          +Button({
            URI: "#",
            capsuleShape: true
          }) 本文 Teksto
        td
          +Button({
            label: "本文 Teksto",
            HTML_Type: Button.HTML_Types.inputButton,
            capsuleShape: true
          })

      +ButtonsShowcase({ caption: "強調配色" })
        td
          +Button({ decoration: Button.DecorativeVariations.accented }) 本文 Teksto
        td
          +Button({
            URI: "#",
            decoration: Button.DecorativeVariations.accented
          }) 本文 Teksto
        td
          +Button({
            label: "本文 Teksto",
            HTML_Type: Button.HTML_Types.inputButton,
            decoration: Button.DecorativeVariations.accented
          })

      +ButtonsShowcase({ caption: "ティックボックス振る舞い" })
        td: +Button({ toggled: true }) 入
        td 不可能
        td 不可能

      +ButtonsShowcase({ caption: "無効状態" })
        td
          +Button({ disabled: true }) 押せない
        td
          +Button({
            URI: "#",
            disabled: true
          }) 押せない
        td
          +Button({
            label: "押せない",
