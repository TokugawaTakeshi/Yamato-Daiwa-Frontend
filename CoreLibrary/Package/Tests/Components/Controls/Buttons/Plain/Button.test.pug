extends ../../../../../PagesTemplates/RegularWebPage.pug


block append Metadata

  -
    styleSheetsURIs = [ "./Button.test.css" ]
    scriptsURIs.endOfBody = [ "./Button.test.js" ]


block append Requirements

  include ../../../../../Components.pug


block append PageContent

  .ButtonsShowcasesFlow

    mixin ButtonsShowcase(propertiesObject)
      table.ButtonsShowcase
        caption= propertiesObject.caption
        thead
          tr
            th "button" tag
            th "a" tag
            th "input" tag
        tbody
          block


    +ButtonsShowcase({ caption: "Default options" })
      tr
        td: +Button--YDF({ label: "Teksto 本文"})
        td: +Button--YDF({ label: "Teksto 本文", URI: "#" })
        td
          +Button--YDF({
            label: "Teksto 本文",
            HTML_Type: Button__YDF.HTML_Types.inputButton
          })

    +ButtonsShowcase({ caption: "Geometric variations" })

      tr
        td: +Button--YDF({ label: "Teksto 本文" })
        td: +Button--YDF({ label: "Teksto 本文", URI: "#" })
        td
          +Button--YDF({
            label: "Teksto 本文",
            HTML_Type: Button__YDF.HTML_Types.inputButton
          })

      tr

        td
          +Button--YDF({
            label: "Teksto 本文",
            geometry: Button__YDF.GeometricVariations.small
          })
        td
          +Button--YDF({
            label: "Teksto 本文",
            URI: "#",
            geometry: Button__YDF.GeometricVariations.small
          })
        td
          +Button--YDF({
            label: "Teksto 本文",
            HTML_Type: Button__YDF.HTML_Types.inputButton,
            geometry: Button__YDF.GeometricVariations.small
          })

        tr
          td
            +Button--YDF({
              label: "Teksto 本文",
              geometry: Button__YDF.GeometricVariations.linkLike,
              decoration: Button__YDF.DecorativeVariations.linkLike
            })
          td
            +Button--YDF({
              label: "Teksto 本文",
              URI: "#",
              geometry: Button__YDF.GeometricVariations.linkLike,
              decoration: Button__YDF.DecorativeVariations.linkLike
            })
          td
            +Button--YDF({
              label: "Teksto 本文",
              HTML_Type: Button__YDF.HTML_Types.inputButton,
              geometry: Button__YDF.GeometricVariations.linkLike,
              decoration: Button__YDF.DecorativeVariations.linkLike
            })

