@require "../../../../../Functionality"
@require "../../../../../Components"


CrossBrowserStylesReset()
InitialGlobalCSS_Rules()


provideButtonComponent()


.ButtonsShowcasesFlow

  display flex
  flex-direction column
  row-gap 12px

  padding 12px 10px 16px


.ButtonsShowcase

  centerHorizontallyWithoutWrapper({
    targetElementType: HorizontalCenteringWithoutWrapper.TargetElementTypes.block,
    maximalWidth: 2*NARROWEST_SCREEN_WIDTH_UNIT
  })

  width 100%


  caption

    text-align left

    font-size 16px
    font-weight bold
    color: ShadesOfGray__39ColorsW3C_Palette[16]


  th

    padding-top 6px

    font-size 13px
    font-weight bold
    color: ShadesOfGray__39ColorsW3C_Palette[20]


  td

    padding 6px 4px 0
    text-align center


.Button

  &-NarrowWidth

    max-width 100px
