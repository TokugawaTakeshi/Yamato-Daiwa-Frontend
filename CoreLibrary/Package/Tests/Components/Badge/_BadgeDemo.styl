.BadgeDemo

  &-BadgesTwoColumnsTable

    display grid
    grid-template-columns auto minmax(0, 1fr)
    align-items center

    column-gap 12px
    row-gap 6px


    dt

      font-weight bold
      color: ShadesOfGray__39ColorsW3C_Palette[12]


  &-BadgesFlow

    display flex
    flex-wrap wrap
    gap 6px 6px

    PositionalRelationship({
      definitions:\
          (".Heading2" { retireFromIt: { y: 8px }, pushItFromSelf: { y: 16px } })\
          (".Heading3" { retireFromIt: { y: 8px }, pushItFromSelf: { y: 16px } })
    })

    retireFromElementWithSameSelector({ y: 8px })


    &__LimitedChildrenMaximalWidth

      >*

        max-width 200px
