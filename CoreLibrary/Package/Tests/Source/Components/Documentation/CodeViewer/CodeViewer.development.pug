          .CodeViewer-Tab.CodeViewer-Tab__SelectedState(
            tabindex="0"
          )
            span.CodeViewer-Tab-FileLabel Styles.styl
            span.CodeViewer-Tab-LanguageKey Language
            span.CodeViewer-Tab-LanguageValue Stylus

          .CodeViewer-Tab(
            tabindex="0"
          )
            span.CodeViewer-Tab-FileLabel Logic.ts
            span.CodeViewer-Tab-LanguageKey Language
