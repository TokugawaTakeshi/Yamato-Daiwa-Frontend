block append Metadata

  -
    HTML_PAGE_TITLE = "CodeViewer component development";
    styleSheetsURIs = [ "./CodeViewer.development.css" ]
    scriptsURIs.endOfBody = [ "./CodeViewer.test.js" ]


block append Requirements

  include ../../../../../Components.pug


block append PageContent

  .SamplesFlow

    .Sample

      .CodeViewer

        .CodeViewer-TopHeading 見出し

        iframe.CodeViewer-IFrame.CodeViewer-IFrame__DefaultPaddings(
          src= "https://duckduckgo.com/"
          title="Below listing rendering result"
        )

        .CodeViewer-ActionBar

          button.CodeViewer-ActionBar__CopyCode(
            type="button"
          ) Copy

