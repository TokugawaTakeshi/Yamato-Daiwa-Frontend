provideCallableExpressionSchemeAndRelatedComponentStyles()

  .CallableExpressionScheme

    &-TechnicalNameHeading

      font-family Consolas, monaco, monospace
      applyTextGeometryWithoutExtraSpaceCausedByLineHeight({
        fontSize: 1.4rem,
        lineSpacing: 0.2rem,
        mustAllowWordBreakingAnywhere: true
      })

      font-weight bold
      color: ShadesOfGray__39ColorsW3C_Palette[12]


    &-LocalizedDescriptiveHeading

      applyTextGeometryWithoutExtraSpaceCausedByLineHeight({
        fontSize: 1.2rem,
        lineSpacing: 0.2rem,
        mustAllowWordBreakingAnywhere: true
      })

      color: ShadesOfGray__39ColorsW3C_Palette[16]

      margin-top 0.1rem


    &-SignaturesFlow

      margin-top 16px


      >* + *

        margin-top 12px


    &-Signature

      &-Heading

        font-family "Arial Black", "Arial Bold", "Gadget", sans-serif
        applyTextGeometryWithoutExtraSpaceCausedByLineHeight({ fontSize: 1.2rem, lineSpacing: 0.2rem })

        color: ShadesOfGray__39ColorsW3C_Palette[12]


      &-LocalizedDescriptiveHeading

        applyTextGeometryWithoutExtraSpaceCausedByLineHeight({
          fontSize: 1.1rem,
          lineSpacing: 0.2rem,
          mustAllowWordBreakingAnywhere: true
        })

        font-weight bold
        color: ShadesOfGray__39ColorsW3C_Palette[16]

        margin-top 0.1rem


    &-GenericExpressionLabel

      font-family Consolas, monaco, Meiryo UI, monospace


    &-ParametersAndReturnedValuesGroup

      display flex
      flex-wrap wrap
      align-items center

      retireFrom({ targetElementSelector: ".CallableExpressionScheme-GenericExpressionLabel", y: 6px })


    &-OpeningCurlyBracket

      font-family "Arial Black", "Arial Bold", "Gadget", sans-serif

      font-weight bold
      color: ShadesOfGray__39ColorsW3C_Palette[12]

      flex-shrink 0


    &-ParametersFlow

      display grid
      grid-template-columns repeat(auto-fill, minmax(250px, 1fr));
      gap 6px

      margin-top 0.4rem
      flex 1 1 100%


    &-ClosingBracket

      font-family "Arial Black", "Arial Bold", "Gadget", sans-serif

      font-weight bold
      color: ShadesOfGray__39ColorsW3C_Palette[12]

      flex-shrink 0
      retireFrom({ targetElementSelector: ".CallableExpressionScheme-ParametersFlow", y: 6px })


    &-ReturnedValue

      font-family Consolas, monaco, Meiryo UI, monospace

      font-weight bold
      color darkred

      flex-shrink 0
      margin-left 4px


      /.CallableExpressionScheme-ParametersFlow + .CallableExpressionScheme-ClosingBracket + &

        margin-top 8px
