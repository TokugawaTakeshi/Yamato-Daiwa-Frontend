include ParameterMetadata.class.pug


mixin ParameterMetadata--YDF_DK(parameterSpecification)

  - const TITLE_HTML_ID = ParameterMetadata__YDF_DK.generateComponentID();

  .ParameterMetadata--YDF_DK

    .ParameterMetadata--YDF_DK-ParameterNumberTitle(
      id=TITLE_HTML_ID
    )
      | #{ ParameterMetadata__YDF_DK.localization.buildParametersNumberLabel({ parameterNumber: parameterSpecification.number }) }


    if parameterSpecification.required === true

      +Badge--YDF({
        value: ParameterMetadata__YDF_DK.localization.requirementLabels.required,
        decoration: Badge__YDF.DecorativeVariations.veryCatchyPastel
      }).ParameterMetadata--YDF_DK-RequirementBadge

    else if parameterSpecification.required === false

      +Badge--YDF({
        value: ParameterMetadata__YDF_DK.localization.requirementLabels.optional,
        decoration: Badge__YDF.DecorativeVariations.calmingPastel
      }).ParameterMetadata--YDF_DK-RequirementBadge

    else if typeof argumentSpecification.defaultValue !== "undefined"

      +Badge--YDF({
        value: ParameterMetadata__YDF_DK.localization.requirementLabels.hasDefaultValue,
        decoration: Badge__YDF.DecorativeVariations.neutralPastel
      }).ParameterMetadata--YDF_DK-RequirementBadge


    dl.ParameterMetadata--YDF_DK-Metadata(
      aria-labelledby=TITLE_HTML_ID
    )

      dt.ParameterMetadata--YDF_DK-Metadata-Key= ParameterMetadata__YDF_DK.localization.metadataKeys.genericTechnicalName
      dd.ParameterMetadata--YDF_DK-Metadata-Value&attributes({
        class: [ "ParameterMetadata--YDF_DK-Metadata-Value__ProgrammaticFont" ]
      })= parameterSpecification.genericTechnicalName

      if parameterSpecification.localizedName
        dt.ParameterMetadata--YDF_DK-Metadata-Key= ParameterMetadata__YDF_DK.localization.metadataKeys.localizedName
        dd.ParameterMetadata--YDF_DK-Metadata-Value= parameterSpecification.localizedName

      dt.ParameterMetadata--YDF_DK-Metadata-Key= ParameterMetadata__YDF_DK.localization.metadataKeys.type
      dd.ParameterMetadata--YDF_DK-Metadata-Value&attributes({
        class: [
          "ParameterMetadata--YDF_DK-Metadata-Value__ProgrammaticFont",
          "ParameterMetadata--YDF_DK-Metadata-Value__Accented"
        ]
      })= parameterSpecification.type
